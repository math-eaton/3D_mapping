  },
  "homepage": "https://github.com/bubkoo/ansi.js",
  "dependencies": {
    "on-new-line": "1.0.0"
  },
  "devDependencies": {
    "@bubkoo/commitlint-config": "^1.0.1",
    "@bubkoo/eslint-config": "^1.2.0",
    "@bubkoo/semantic-release-config": "^1.3.0",
    "@bubkoo/tsconfig": "^1.0.0",
    "@types/node": "^18.8.3",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "semantic-release": "^19.0.5",
    "tslib": "^2.4.0",
